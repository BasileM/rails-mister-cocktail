<div class="container">
  <h1><%= @cocktail.name %></h1>
  <hr>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> | <%= dose.ingredient.name %> | <%= link_to "Delete", dose_path(dose), method: "delete" %> | <%= link_to "Update", edit_dose_path(dose)%>
      </li>
    <% end %>
  </ul>
  <hr>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit class: "btn btn-primary"%>
  <% end %>
  <hr>
  <p><%= link_to "Back to list", root_path %></p>

</div>
